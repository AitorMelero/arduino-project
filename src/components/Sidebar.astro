
---
import SectionLink from "./SectionLink.astro";

const { id = "", allReferences = [], classStyles = "", title = "" } = Astro.props;
---

<aside id={id} class={classStyles}>
    {title !== "" ? (
        <h2 class="my-4 px-4 font-bold text-sm uppercase text-gray-5 dark:text-gray-4">
            {title}
        </h2>
    ) : (
        <></>
    )}
    {allReferences.map(({ url, title }) => (
        <SectionLink urlPost={url} titlePost={title} />
    ))}
</aside>
